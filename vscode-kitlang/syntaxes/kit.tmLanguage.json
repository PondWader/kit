{
  "name": "Kit",
  "scopeName": "source.kit",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#exported-function-declaration"
    },
    {
      "include": "#function-declaration"
    },
    {
      "include": "#export-declaration"
    },
    {
      "include": "#interface-declaration"
    },
    {
      "include": "#interface-instantiation"
    },
    {
      "include": "#function-keywords"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation-accessor"
    },
    {
      "include": "#function-call"
    },
    {
      "include": "#type-annotation"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.double-slash.kit",
      "begin": "//",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.comment.kit"
        }
      },
      "end": "$"
    },
    "strings": {
      "name": "string.quoted.double.kit",
      "begin": "\"",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.kit"
        }
      },
      "end": "\"",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.kit"
        }
      },
      "patterns": [
        {
          "include": "#template-expression"
        },
        {
          "name": "constant.character.escape.kit",
          "match": "\\\\."
        }
      ]
    },
    "template-expression": {
      "name": "meta.template.expression.kit",
      "begin": "\\$\\{",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.template-expression.begin.kit"
        }
      },
      "end": "\\}",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.template-expression.end.kit"
        }
      },
      "patterns": [
        {
          "include": "#strings"
        },
        {
          "include": "#numbers"
        },
        {
          "include": "#keywords"
        },
        {
          "include": "#function-keywords"
        },
        {
          "include": "#operators"
        },
        {
          "include": "#punctuation-accessor"
        },
        {
          "include": "#function-call"
        },
        {
          "include": "#type-annotation"
        },
        {
          "include": "#identifiers"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.kit",
          "match": "\\b(if|else|for|while|range|return|export|import|as|in|throw|interface|instance)\\b"
        },
        {
          "name": "storage.type.kit",
          "match": "\\b(var|struct)\\b"
        },
        {
          "name": "constant.language.kit",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "function-keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.function.kit",
          "match": "\\b(fn|async|fork)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.kit",
          "match": "\\b0[xX][0-9a-fA-F][0-9a-fA-F_]*n?\\b"
        },
        {
          "name": "constant.numeric.binary.kit",
          "match": "\\b0[bB][01][01_]*n?\\b"
        },
        {
          "name": "constant.numeric.octal.kit",
          "match": "\\b0[oO][0-7][0-7_]*n?\\b"
        },
        {
          "name": "constant.numeric.decimal.kit",
          "match": "\\b\\d[\\d_]*(?:\\.[\\d_]+)?(?:[eE][+-]?[\\d_]+)?n?\\b"
        }
      ]
    },
    "operators": {
      "name": "keyword.operator.kit",
      "match": "->|=|\\+|-|\\*|/|%|==|!=|<=|>=|<|>"
    },
    "punctuation-accessor": {
      "name": "punctuation.accessor.kit",
      "match": "\\."
    },
    "type-annotation": {
      "match": "(?<=:\\s{0,10})\\b(string|number|bool)\\b",
      "name": "support.type.primitive.kit"
    },
    "identifiers": {
      "name": "variable.other.kit",
      "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
    },
    "function-call": {
      "name": "entity.name.function.kit",
      "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b(?=\\s*\\()"
    },
    "exported-function-declaration": {
      "match": "\\b(export)\\s+(fn)\\s+([A-Za-z_][A-Za-z0-9_]*)",
      "captures": {
        "1": {
          "name": "keyword.control.kit"
        },
        "2": {
          "name": "keyword.declaration.function.kit"
        },
        "3": {
          "name": "entity.name.function.kit"
        }
      }
    },
    "function-declaration": {
      "match": "\\b(fn)\\s+([A-Za-z_][A-Za-z0-9_]*)",
      "captures": {
        "1": {
          "name": "keyword.declaration.function.kit"
        },
        "2": {
          "name": "entity.name.function.kit"
        }
      }
    },
    "export-declaration": {
      "match": "\\b(export)\\s+(?!(?:fn|async|fork)\\b)([A-Za-z_][A-Za-z0-9_]*)",
      "captures": {
        "1": {
          "name": "keyword.control.kit"
        },
        "2": {
          "name": "variable.other.constant.kit"
        }
      }
    },
    "interface-declaration": {
      "match": "\\b(interface)\\s+([A-Za-z_][A-Za-z0-9_]*)",
      "captures": {
        "1": {
          "name": "keyword.control.kit"
        },
        "2": {
          "name": "entity.name.type.kit"
        }
      }
    },
    "interface-instantiation": {
      "match": "\\b(instance)\\s+([A-Za-z_][A-Za-z0-9_]*)(?=\\s*\\{)",
      "captures": {
        "1": {
          "name": "keyword.control.kit"
        },
        "2": {
          "name": "entity.name.type.kit"
        }
      }
    }
  }
}
